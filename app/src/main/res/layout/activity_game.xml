<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".views.GameActivity">

    <!-- Game Info Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/gameInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/word_to_draw_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Draw: Apple" />

            <TextView
                android:id="@+id/timer_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:text="1:23" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Player List -->
    <androidx.cardview.widget.CardView
        android:id="@+id/playerListCard"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="#33FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/start_game_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameInfoCard">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/player_list_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:text="Player1: 100\nPlayer2: 50\nYou: 75" />
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Drawing Canvas -->
    <com.example.drawit.views.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/guess_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameInfoCard"
        tools:ignore="MissingConstraints" />
        
    <!-- Drawing Tools Container -->
    <LinearLayout
        android:id="@+id/drawing_tools_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#33FFFFFF"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gameInfoCard"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">
        
        <!-- Color Picker -->
        <LinearLayout
            android:id="@+id/color_picker_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            
            <Button
                android:id="@+id/color_black"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#000000" />
                
            <Button
                android:id="@+id/color_red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#FF0000" />
                
            <Button
                android:id="@+id/color_blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#0000FF" />
                
            <Button
                android:id="@+id/color_green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#00FF00" />
                
            <Button
                android:id="@+id/color_yellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#FFFF00" />
                
            <Button
                android:id="@+id/color_purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"
                android:background="#800080" />
        </LinearLayout>
        
        <!-- Brush Tools -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">
            
            <Button
                android:id="@+id/small_brush_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Small" />
                
            <Button
                android:id="@+id/medium_brush_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium" />
                
            <Button
                android:id="@+id/large_brush_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large" />
                
            <Button
                android:id="@+id/eraser_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eraser" />
                
            <Button
                android:id="@+id/clear_canvas_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clear" />
        </LinearLayout>
    </LinearLayout>

    <!-- Guess Container -->
    <LinearLayout
        android:id="@+id/guess_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <EditText
            android:id="@+id/guess_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Your guess..."
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/guess_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Guess" />
    </LinearLayout>

    <!-- Start Game Button (Visible to host only) -->
    <Button
        android:id="@+id/start_game_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Start Game"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/drawing_view" />

</androidx.constraintlayout.widget.ConstraintLayout>